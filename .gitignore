
import random

class person:
	def __init__ (self, name, hp, dmg):
		self.name = name
		self.hp = hp
		self.dmg = dmg



player_hp = random.randint(50, 70)
player_dmg = random.randint(5,7)


player = person("knight", player_hp, player_dmg)
print(vars(player))


enemy_hp = random.randint(50, 70)
enemy_dmg = random.randint(5,7)

enemy = person("monster", enemy_hp, enemy_dmg)
print(vars(enemy))


knight = 0
monster = 0
check = ("счет: ", "knight", "-", "monster")


print(check)
print("fight")


