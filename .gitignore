	global knight, monster, player, enemy
	while True:
		if player.hp > 0 and enemy.hp > 0:
			print(vars(player))
			print(vars(enemy))
			player.hp -=enemy.dmg+random.randint(0, 7)
			print(vars(player))
			enemy.hp -=player.dmg+random.randint(0, 7)
			print(vars(enemy))
		else:
			if player.hp > 0:
				print("победа")
				player = person("knight", player_hp+5, player_dmg)
				enemy = person("monster", enemy_hp, enemy_dmg)
				print(vars(player))
				knight += 1
				print("счет: ", knight, "-", monster)
				return knight, monster, player, enemy
			else:
