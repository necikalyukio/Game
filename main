#позиция персонажа
def person_position(start):
    global TILE
    bg = pg.image.load('knight1.jpg').convert()
    bg = pg.transform.scale(bg, (TILE, TILE))
    sc.blit(bg, (start[0] * TILE, start[1] * TILE))


