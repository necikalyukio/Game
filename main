#персонажи
class person:
    def __init__(self, name, maxhp, hp, dmg, arm, pen, speed, pos):
        self.name = name
        self.maxhp = maxhp
        self.hp = hp
        self.dmg = dmg
        self.arm = arm
        self.pen = pen
        self.speed = speed
        self.pos = pos


